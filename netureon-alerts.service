[Unit]
Description=Netureon Alert Daemon
After=network.target postgresql.service

[Service]
Type=simple
User=orangepi
Group=orangepi
WorkingDirectory=/home/orangepi/Netureon
Environment=PATH=/home/orangepi/Netureon/.venv/bin:$PATH
Environment=PYTHONPATH=/home/orangepi/Netureon
ExecStart=/home/orangepi/Netureon/.venv/bin/python3 /home/orangepi/Netureon/alert_daemon.py
Restart=always
RestartSec=10s

[Install]
WantedBy=multi-user.target
